var agora = new Date()
var diaSem = agora.getDay()

console.log(diaSem)

switch(diaSem){
    case 0:
        console.log('Domingo')
        break
    case 1:
        console.log('segunda')
      case 2:
        console.log('terça')
        break
    case 3:
        console.log('guarta')
      case 4:
        console.log('quinta')
        break
    case 5:
        console.log('Sexta')
      break
      case 6:
       console.log('Sabado')
      break
      default:
        console.log('Dia inválido [ERROR]')
}